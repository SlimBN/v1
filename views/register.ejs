					<div>
						<input type="text" name="username" placeholder="Your Username please">
					</div>

					<div>
						<input type="text" name="email" placeholder="Votre addresse mail">
					</div>
					
					<div>
<!-- 						<label for="firstname">Prénom</label> -->
