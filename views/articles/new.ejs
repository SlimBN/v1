			function summarize() {
				$('#article_title').val($('.editable-title').html().replace(/(<([^>]+)>)/ig,""));
				$('#article_abstract').val($('.editable-abstract').html().replace(/(<([^>]+)>)/ig,""));

				var content = editor.serialize();
